{
    "scheming_version": 1,
    "dataset_type": "dataset",
    "about": "ODM dataset schema",
    "about_url": "http://github.com/open-data/ckanext-scheming",
    "dataset_field_group_sort_order": [
       "Description",
       "Temporal",
       "Spatial",
       "DataQuality",
       "Contact",
       "Management"
    ],
    "dataset_fields": [
    {
        "field_name": "title_translated",
        "grouping": "Description",
        "validate": "true",
        "odm_required": "true",
        "multilingual": "true",
        "preset": "fluent_core_title_translated_single",
        "label":
        {
            "en": "Title",
            "th": "หัวข้อ",
            "km": "ចំណងជើង",
            "vi": "Tiêu đề ",
            "my": "ခေါင်းစဥ်",
            "lo": "Title in lo"
        },
        "form_languages": ["en", "th", "km", "vi", "my", "lo"],
        "form_placeholder": {
          "en": "Name given to the dataset.",
          "th": "[[TH]] Name given to the dataset",
          "my": "[[MY]] Name given to this dataset",
          "km": "[[KM]] Name given to this dataset",
          "vi": "[[VI]] Name given to this dataset",
          "lo": "[[LO]] Name given to this dataset"
        },
        "form_snippet": "slug_target_fluent_text.html",
        "form_attrs":
        {
            "data-module": "slug-preview-target"
        }
    },
    {
        "field_name": "name",
        "grouping": "Description",
        "required": "true",
        "label": "URL",
        "preset": "dataset_slug",
        "form_placeholder": "eg. my-dataset",
        "validators": "odm_dataset_if_empty_new_id odm_dataset_urlencode odm_dataset_record_does_not_exist_yet"
    },
    {
        "field_name": "title",
        "grouping": "Description",
        "label": "title",
        "preset": "text_hidden",
        "validators": "if_empty_same_as(name)"
    },
    {
        "field_name": "notes",
        "label": "Abstract",
        "preset": "text_hidden"
    },
    {
        "field_name": "notes_translated",
        "grouping": "Description",
        "preset": "odm_notes_translated_markdown",
        "odm_required": "true",
        "validate": "true",
        "validators": "fluent_text odm_dataset_fluent_required",
        "label": {
            "en": "Abstract",
            "th": "รายละเอียด",
            "km": "ការពិពណ៌នា",
            "vi": "Mô tả",
            "my": "ဖော်ပြချက်",
            "lo": "Description in lo"
        },
        "form_languages": ["en", "th", "km", "vi", "my", "lo"],
        "form_placeholder": "Short description explaining the content and its origins."
    },
    {
        "field_name": "taxonomy",
        "grouping": "Description",
        "label": "Dataset topic category",
        "preset": "odm_taxonomy",
        "validate": "true",
        "form_placeholder": "e.g. economy, mental health, government"
    },
    {
        "field_name": "MD_DataIdentification_language",
        "grouping": "Description",
        "label": "Language",
        "validate": "true",
        "form_placeholder": "Language(s) of the dataset, including resources within dataset.",
        "preset": "odm_language"
    },
    {
        "field_name": "MD_Constraints",
        "grouping": "Description",
        "validate": "true",
        "preset": "odm_textarea_translated",
        "label": {
            "en": "Use limitations",
            "th": "การเข้าถึงและข้อจำกัด",
            "km": "កំហិតនៃការចូល និងប្រើប្រាស់",
            "vi": "Hạn chế truy cập và sử dụng",
            "my": "ရယူခြင်းနှင့် အကန့်အသတ်များအသုံးပြုခြင်း",
            "lo": "Description in Laos"
        },
        "form_languages": ["en", "th", "km", "vi", "my", "lo"],
        "form_placeholder": "A few sentences describing legal considerations for people who access the website and/or use its contents."
    },
    {
       "field_name": "owner_org",
       "grouping": "Contact",
       "label": "Organisation name",
       "required": "true",
       "validate": "true",
       "preset": "odm_organization"
    },
    {
        "field_name": "CI_Citation_date",
        "grouping": "Temporal",
        "label": "Dataset reference date",
        "form_placeholder": "Date the dataset was first Published by its creator.",
        "validate": "true",
        "preset": "odm_date"
    },
    {
        "field_name": "MD_Metadata_dateStamp",
        "grouping": "Temporal",
        "validate": "true",
        "label": "Date uploaded",
        "form_placeholder": "Date a new version or update of the dataset was uploaded.",
        "preset": "odm_date_uploaded"
    },
    {
        "field_name": "CI_Citation_lastRevision",
        "grouping": "Temporal",
        "validate": "true",
        "label": "Date of last revision",
        "form_placeholder": "Date a new version or update of the dataset was uploaded.",
        "preset": "odm_date_modified"
    },
    {
        "field_name": "EX_TemporalExtent_startDate",
        "grouping": "Temporal",
        "validate": "true",
        "label": "Temporal extent's start date",
        "form_placeholder": "The period of time for which the dataset is relevant (i.e. 2011-01-01:2011-12-31).",
        "preset": "odm_date"
    },
    {
        "field_name": "EX_TemporalExtent_endDate",
        "grouping": "Temporal",
        "label": "Temporal extent's end date",
        "form_placeholder": "The period of time for which the dataset is relevant (i.e. 2011-01-01:2011-12-31).",
        "preset": "odm_date"
    },
    {
        "field_name": "odm_spatial_range",
        "grouping": "Spatial",
        "label": "GeoNames",
        "required": "true",
        "form_placeholder": "The geographic area that the dataset is relevant to (i.e. Cambodia, Laos).",
        "preset": "odm_spatial_range",
        "validate": "true"
    },
    {
        "field_name": "EX_GeographicBoundingBox_west",
        "grouping": "Spatial",
        "label": "West bounding coordinates ",
        "form_placeholder": "The west point of the bounding box that the dataset is relevant to.",
        "preset": "number",
        "validate": "true"
    },
    {
        "field_name": "EX_GeographicBoundingBox_east",
        "grouping": "Spatial",
        "label": "East bounding coordinates ",
        "form_placeholder": "The east point of the bounding box that the dataset is relevant to.",
        "preset": "number",
        "validate": "true"
    },
    {
        "field_name": "EX_GeographicBoundingBox_south",
        "grouping": "Spatial",
        "label": "South bounding coordinates",
        "form_placeholder": "The south point of the bounding box that the dataset is relevant to.",
        "preset": "number",
        "validate": "true"
    },
    {
        "field_name": "EX_GeographicBoundingBox_north",
        "grouping": "Spatial",
        "label": "North bounding coordinates ",
        "form_placeholder": "The north point of the bounding box that the dataset is relevant to.",
        "preset": "number",
        "validate": "true"
    },
    {
        "field_name": "MD_DataIdentification_spatialResolution",
        "grouping": "Spatial",
        "label": "Spatial Resolution",
        "form_placeholder": "Spatial Resolution of the dataset",
        "preset": "number",
        "validate": "true",
        "validators": "ignore_missing ignore_empty is_positive_integer"
    },
    {
        "field_name": "MD_DataIdentification_spatialReferenceSystem",
        "grouping": "Spatial",
        "label": "Spatial Reference System",
        "form_placeholder": "Spatial Reference System of the dataset",
        "preset": "select",
       "validate": "true",
       "choices": [
          {
             "value": "epsg:4326",
             "label": "WGS 84 (EPSG:4326) (CRS:84)"
          },
          {
             "value": "epsg:3857",
             "label": "WGS 84 (EPSG:3857)"
          },
          {
             "value": "epsg:32629",
             "label": "WGS 84 / UTM zone 29N (EPSG:32629)"
          },
          {
             "value": "epsg:4258",
             "label": "ETRS89 (EPSG:4258)"
          },
          {
             "value": "epsg:4936",
             "label": "ETRS89 (EPSG:4936)"
          },
          {
             "value": "epsg:3246",
             "label": "WGS 84 / SCAR IMW SS16-18 (EPSG:3246)"
          },
          {
             "value": "epsg:32648",
             "label": "WGS 84 / UTM zone 48N (EPSG:32648)"
          },
	  {
             "value": "epsg:32649",
             "label": "WGS 84 / UTM zone 49N (EPSG:32649)"
          },
	  {
             "value": "epsg:404000",
             "label": "Flat-world (EPSG:404000)"	     
          },
	  {
             "value": "epsg:900913",
             "label": "Google Maps Global Mercator (EPSG:900913)"
          }
       ]
    },
    {
        "field_name": "DQ_PositionalAccuracy",
        "grouping": "Spatial",
        "preset": "odm_text_translated",
        "validate": "true",
        "label": {
            "en": "Positional Accuracy",
            "th": "ความถูกต้อง",
            "km": "ភាពទៀងទាត់",
            "vi": "Độ chính xác",
            "my": "တိကျမှန်ကန်မှု",
